            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>
      </a>

      <% if current_user %>
      <% img = '<div id="fb-icon-photo">
                <img src="https://graph.facebook.com/v2.5/' + User.find_by_id(current_user.id).uid + '/picture" height="70" alt="facebook login"/>
                </div>'  %>
        <%= link_to img.html_safe, '/sign_out', method: :delete %>
      <% else %>

        <%= link_to '<div id="fb-icon-circle">
                      <div id="fb-icon">
                        <img src="http://kitsartgallery.com/images/facebook-white-f.png" height="70" alt="facebook login" />
                      </div>
                    </div>'.html_safe, '/auth/facebook' %>
      <% end %>

    </nav>
    <div id="sidr">
      <div id="buttonsmenu">
        <div id="center-me">
          <button id="report-button" class="btn">Report</button>
          <button id="view-button" class="btn">View</button>
          <button id="my-reports" class="btn">My Reports</button>
          <button id="map-button" class="btn">Map</button>
          <button id="vis-button" class="btn">Vis</button>
          <button id="community-posts-button" class="btn">Noticeboards</button>
      </div>
      </div>

      <br>
      <br>

      <button id="fb-login">Login with facebook</button>

      <form id="reportform" class="bar-form">
        <label for="crime">What sort of incident are you reporting?</label>
        <select name="incident" id="incident">
          <option value="1">Assault/harrassment</option>
          <option value="2">Vandalism or criminal damage</option>
          <option value="3">Car theft</option>
          <option value="4">Car break-in</option>
          <option value="5">House burglary</option>
          <option value="6">Other</option>
        </select><br></br>

        <label for="description">In your own words please explain what happened</label>
        <input type="text-area" name="" id="description"><br></br>

        <label for="date">On what date did the incident occur?</label>
        <input type="date" name="" id="date"><br></br>
      </select><br></br>
    <input type="checkbox" name="" id="happened_before"> This has happened before<br></br>

    <p>Click the map where you would like to drop your pin</p>
    <input type="submit" class="submit_button" value="Submit" id="reportsubmit">
  </form>

  <form id="viewform" "bar-form">
    <label for="description">View all incidents within a</label>
    <input type="number" name="" id="radius">
    <input type="submit" class="submit_button" value="Submit" id="viewsubmit">
  </form>
  <div id="vis" style="display: none;"></div>

